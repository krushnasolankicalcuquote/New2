<log4net>
	<root>
		<appender-ref ref="RollingFile" />
		<appender-ref ref="AdoNetAppender" />
		<level value="ALL" />
	</root>
	<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
		<threshold>Info</threshold>
		<file value="Logs/WorkFlowService.log" />
		<appendToFile value="true" />
		<maximumFileSize value="1000KB" />
		<maxSizeRollBackups value="500" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %level %thread %logger - ClientCode:%property{clientCode} - %message%newline" />
		</layout>
	</appender>
	<appender name="AdoNetAppender" type="log4net.Appender.AdoNetAppender">
		<!--<threshold>WARN</threshold>-->
		<threshold>ALL</threshold>
		<bufferSize value="1" />
		<connectionType value="System.Data.SqlClient.SqlConnection, System.Data, Version=1.0.3300.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
		<connectionString providerName="System.Data.SqlClient" name="Log4netDb" value="data source=.\SQLEXPRESS;initial catalog=CalcuQuote_Logs;integrated security=false;persist security info=True;User Id=sa; Password=triveni@123;MultipleActiveResultSets=True;" />
		<commandText value="INSERT INTO WorkFlowService_Logs ([Date],[Thread],[Source],[Level],[Logger],[Message],[Exception],[HostName],[ClientCode]) VALUES (@log_date, @thread, 'LOG SOURCE',@log_level, @logger, @message, @exception, @hostname, @ClientCode)" />
		<parameter>
			<parameterName value="@log_date" />
			<dbType value="DateTime" />
			<layout type="log4net.Layout.RawTimeStampLayout" />
		</parameter>
		<parameter>
			<parameterName value="@thread" />
			<dbType value="String" />
			<size value="255" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="WorkFlowService" />
			</layout>
		</parameter>
		<parameter>
			<parameterName value="@hostname" />
			<dbType value="String" />
			<size value="255" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%property{log4net:HostName}" />
			</layout>
		</parameter>
		<parameter>
			<parameterName value="@log_level" />
			<dbType value="String" />
			<size value="50" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%level" />
			</layout>
		</parameter>
		<parameter>
			<parameterName value="@logger" />
			<dbType value="String" />
			<size value="255" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%logger" />
			</layout>
		</parameter>
		<parameter>
			<parameterName value="@message" />
			<dbType value="String" />
			<size value="-1" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%message" />
			</layout>
		</parameter>
		<parameter>
			<parameterName value="@exception" />
			<dbType value="String" />
			<size value="-1" />
			<layout type="log4net.Layout.ExceptionLayout" />
		</parameter>
		<parameter>
			<parameterName value="@ClientCode" />
			<dbType value="String" />
			<size value="-1" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%property{clientCode}" />
			</layout>
		</parameter>
	</appender>
</log4net>